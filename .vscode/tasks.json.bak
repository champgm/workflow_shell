{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TSC Watch",
      "type": "shell",
      "command": "tsc",
      "isBackground": true,
      "args": [
        "--watch",
        "--project",
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "echo": false,
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": "$tsc-watch"
    }
  ]
}